##---------- General keybingdigs  ----------##

# Terminal (tilix,default/floating/fullscreen)
super + {_,ctrl,shift} + Return
    alacritty --class {'tilix','floating','fullscreen'}

# File explorer
super + {_,shift} + e
    {_,bspc rule -a floating -o state=floating sticky=on focus=on follow=on;} alacritty --class 'floating' -e ranger

# cava music visualizer (sticky)
#super + ctrl + c
#    bspc rule -a floating -o state=floating focus=on follow=on; tilix --class 'floating' -e cava
    #bspc rule -a floating -o state=floating sticky=on focus=on follow=on; tilix --class 'floating' -e cava

# iwctl in floating terminal 
super + n
    alacritty --class 'floating' -e iwctl

# Web browser 
super + b
    firefox

# Htop
ctrl + shift + Escape
   alacritty --class 'fullscreen' -e htop

# Xprop
super + p
    alacritty --class 'floating' --hold -e xprop WM_CLASS

# Color Picker
super + shift + p
    color-gpick
    
# Lockscreen
super + Escape
    slock

alt + s

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + d
    sh ~/.config/rofi/bin/launcher
# Rofi powermenu
super + shift + x
    sh ~/.config/rofi/bin/powermenu

# Rofi config menu 
super + o
    sh ~/.config/rofi/bin/configs
    
# Rofi ssh menu 
super + s
    ~/.config/rofi/bin/ssh_menu

##---------- System Keys ----------##

#Take screenshot of area with Flameshot
Print
    flameshot gui

# Take fullscreen and save to ~/Pictures
alt + Print 
    flameshot full -p ~/Pictures/Screenshots
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
    amixer set Master { 1%+, 1%-, toggle}

# Media control
XF86Audio{Next,Prev,Play,Stop}
    mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
    bspc node -{c,k}

# Reload Keybindings
super + r
    pkill -USR1 -x sxhkd

# Quit/Restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# Toggle fullscreen
super + m
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + f
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Workspaces control
super + {_,shift + }{1-9}
    bspc {desktop -f,node -d} '^{1-9}'

# Workaround for ^10 workspace
super + {_,shift + }0
    bspc {desktop -f,node -d} 'second'

F12
    bspc desktop {-f 'term', last.local -f}

# Hide/Unhide Window
super + i
    barmask

# Hide/Unhide Polybar
super + shift + i
    winmask	

# Cycle through occupied desktops (forward)
super + Tab 
    bspc desktop -f next.local.occupied
    
# Cycle through occupied desktops (backward)
super + shift + Tab 
    bspc desktop -f prev.local.occupied

# Resize windows
super + alt + {h,j,k,l}
    /bin/sh $HOME/.config/bspwm/resize/{expandx.sh,expandy.sh,shrinky.sh,shrinkx.sh}
