#!/usr/bin/bash
DIR="$HOME/.config/bspwm"

rofi_command="rofi -theme $DIR/rofi/themes/powermenu.rasi"

uptime=$(uptime -p | sed -e 's/up //g')

# Options
lock="lock"
suspend="sus"
logout="log"

# Variable passed to rofi
options="$shutdown\n$reboot\n$lock\n$suspend\n$logout"

chosen="$(echo -e "$options" | $rofi_command -p "UP - $uptime" -dmenu -selected-row 4)"
case $chosen in
    $shutdown)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $lock)
        slock
        ;;
    $suspend)
        systemctl suspend
        ;;
    $logout)
        bspc quit
        ;;
esac

