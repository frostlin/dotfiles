##---------- General keybingdigs  ----------##

# Terminal (alacritty,default/floating/fullscreen)
super + {_,ctrl,shift} + Return
	{alacritty,alacritty --class 'Floating',alacritty --class 'Fullscreen'}

# File explorer
super + e
    alacritty -e ranger

# Web browser 
super + b
    brave

# Htop
ctrl + shift + Escape
    alacritty --class 'Fullscreen' -e htop

# Xprop
super + p
    alacritty --class 'Floating' --hold -e xprop WM_CLASS

# Color Picker
super + shift + p
	color-gpick
    
# Lockscreen
super + Escape
    bsplock

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + d
	sh ~/.config/bspwm/rofi/bin/launcher

##---------- System Keys ----------##

#Take screenshot of area with Flameshot
Print
    flameshot gui -p ~/Pictures/Screenshots

# Take fullscreen and save to ~/Pictures
shift + Print
    flameshot full -p ~/Pictures/Screenshots
# Brighness control
XF86MonBrightness{Up,Down}
	brillo -q {-A 1, -U 1}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer set Master { 1%+, 1%-, toggle}

# Media control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# Reload Keybindings
super + r
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# Fullscreen or Monocle
super + m
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + f
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Send focused window to another workspace
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'
	
# Hide/Unhide Window
super + shift + i
	winmask	

# Hide/Unhide Polybar
super + i
    barmask
